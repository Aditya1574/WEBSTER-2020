<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title><%= Final.FullName %></title>             <!--Title Name-->                              
	
	 <script src="https://kit.fontawesome.com/b99e675b6e.js"></script> <!-- Fontawesome-->
	 <!-- CSS -->
	<link rel="stylesheet" href="css/student.css" >                     <!--CSS LINK-->

	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">	
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<style>
	 body{
  background-image: url("images/back4.jpg");
  background-position: center;
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-size: cover;
  height: 100%;
  }
     html{
    overflow-x: hidden;
  }
	#ram {
		position: absolute;
		right: 75px;
	}
	#abd{
		position: absolute;
		right: 170px;
		top: 2px;
	}
	#abc{
		position: sticky;
                top: 0%;
	
	}
</style>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light" id="abc">
        <a class="navbar-brand" href="#"><b>Hello , <%= Final.FullName %></b></a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav form-inline my-2 my-lg-0">
                <li class="nav-item dropdown" id="ram">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                     <i class="fa fa-bars" aria-hidden="true"></i>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="/Student_vacancy">Vacancies</a>
                        <a class="dropdown-item" href="/logout">Logout</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
	<div class="wrapper">
		<div class="resume">
			<div class="left">
				<!-- uncomment for adding image -->
				<div class="img_holder">
					<img src="<%= Final.Link %>">     
				</div>
				<div class="contact_wrap pb">
					<div class="title" > 
						Contact
					</div>
					<div class="contact">
						<ul>
							<li>
								<div class="li_wrap">
									<div class="icon"><a href="tel:<%= Final.Contact %>" ><i class="fas fa-mobile-alt" aria-hidden="true"></i></a></div>
									<div class="text"><%= Final.Contact %></div>    <!--Phone Number-->
								</div>
							</li>
							<li>
								<div class="li_wrap">
									<div class="icon"><a  href="mailto:<%= Final.Email %>"><i class="fas fa-envelope" aria-hidden="true"></i></a></div>
									<div class="text"><%= Final.Email %></div>             <!--Gmail acccount of user-->
								</div>
							</li>
							<li>
								<div class="li_wrap">
									<div class="icon"><a  href="<%= Final.Linkdn %>"><i class="fab fa-weebly" aria-hidden="true"></i></a></div>
									<div class="text"><%= Final.Linkdn %></div>              <!--Linkedln Profile-->
								</div>
							</li>
						</ul>
					</div>
				</div>
				<div class="skills_wrap pb">
					<!--Skill division we can add more-->
					<!-- Here How we will decide hobbies according to user-->
					<div class="title">
						Skills
					</div>
					<div class="skills">
						<!-- Add Skills here -->
						<ul>
                        <% Skills.forEach(function(element){ %>
							<li>
								<div class="li_wrap">
									<div class="text"><b><%= element %></b></div>
								</div>
							</li>
							<% }); %>
						</ul>
					</div>
				</div>
				<!--Skill close-->

				<div class="hobbies_wrap pb">
					<!--Hobbies Section-->
					<!-- Here How we will decide hobbies according to user-->
					<div class="title">
						hobbies
					</div>
					<div class="hobbies">
						<ul>
							<% Hobbies.forEach(function(element){ %>
							<li>
								<div class="li_wrap">
									<div class="text"><b><%= element %></b></div>
								</div>
							</li>
							<% }); %>
						</ul>
					</div>
				</div>
			</div>
			<!--Hobbies Section over-->
			<div class="right">
				<div class="header">
					<div class="name_role">
						<div class="name">
						<%=  Final.FullName  %>	
						</div>
						<div class="role">
						<%= Final.College_Info.NOC %> <br>
						<%= Final.Spec %>	
						</div>
					</div>
					<div class="about">
					    <%= Final.UserInfo %>
					</div>
				</div>
				<div class="right_inner">
					<div class="exp">
						<div class="title">
							Projects
						</div>
						<div class="exp_wrap">
							<ul>
						<% Projects.forEach(function(element){ %>		
								<li>
									<div class="li_wrap">
										<div class="date">
										<%= element.Name %>	
										</div>
										<div class="info">
											<p class="info_title">
												<%= element.Name %>
											</p>
											<p class="info_com">
											<a href="<%= element.link %>">
											<button type="button" class="btn btn-outline-secondary"> <i class="fab fa-github"></i> GitHub Link</button>
											</a>
												<!--how we add user git link-->
											</p>
											<p class="info_cont">
												<%= element.Desc %>
											</p>
										</div>
									</div>
								</li>
								<% }); %>
								<!-- Projects ends -->
							</ul>
						</div>
					</div>
					<div class="education">
						<div class="title">
						Education
						</div>
						<div class="education_wrap">
					
							<ul>
								<li>
									<div class="li_wrap">
										<div class="date">
										<%= Final.College_Info.YOG %>
										</div>
										<div class="info">
											<p class="info_title">
										<%= Final.Course %>	
											</p>
											<p class="info_com">
										<%= Final.Course_Type %>
											</p>
											<p class="info_com">
										<%= Final.Spec %>
											</p>
											<p class="info_cont">
										<b>CPI: </b> <%= Final.College_Info.CPI %>
											</p>
										</div>
									</div>
								</li>						
                                <!-- Schools -->
								<li>
										
									<div class="li_wrap">
										<div class="date">
										<%= Final.School_Info.YOS %>
										</div>
										<div class="info">
											<p class="info_title">
											Schooling
											</p>
											<p class="info_com">
										<%= Final.School_Info.Name %>	
											</p>
											<p class="info_cont">
										<b>Percentage: </b> <%= Final.School_Info.CGPA %> 
											</p>
										</div>
									</div>
								</li>
								<!-- Schools -->
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- jQuery and JS bundle w/ Popper.js -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
</body>
</html>
